{% extends 'base.html.twig' %}

{% block header %}
	{% include "layout/header-home.html.twig" %}
{% endblock %}

{% block body %}
	<div>
		<a href="{{ path("main_information")}}"><img class="custom-button d-md-block d-lg-none" src="{{asset('assets/images/service_icons/info.png')}}" alt="icone information"></a>
	</div>
	<section class="mb-5">
		<div>
			<h1 class="mt-5 text-center">Marcher & partager</h1>
		</div>
		<div class="container search">
			<form class="d-flex mt-5" action="{{path('search')}}">
				<input class="form-control me-2" name="query" type="search" placeholder="Ex : Annecy" aria-label="Search">
				<button class="btn btn-outline-secondary" type="submit">Filtrer</button>
			</form>
		</div>
		<div class="album py-5">
			<div class="container-fluid ">
				<div
					class="row row-cols-1 row-cols-xl-3 row-cols-lg-2 align-items-stretch g-4 py-5 ">
					<!-- Angel Card-->
					{% for angel in angels %}
						<div class="col">
							<div class="card card-cover h-100 overflow-hidden  bg-success rounded-5 shadow-lg" style="background-image: url('assets/images/background/rando{{ random(31 , 37) }}.jpg') ; background-position: center">
								<div class="d-flex flex-column h-100 p-5 text-shadow-1">
									<div class="text-center">
										<a href="{{ path('show_angel', {id: angel.id}) }}">
											<img src="{{ asset('assets/images/profile_picture/' ~ angel.picture) }}" alt="Bootstrap" width="80" height="80" class=" rounded-circle border border-white">
										</a>
									</div>
									<a href="{{ path('show_angel', {id: angel.id}) }}" class="text-decoration-none">
										<h2 class="mt-5 display-6 lh-1 fw-bold text-white text-center">{{ angel.firstName | capitalize}}</h2>
									</a>
									<p class=" mb-5 display-6 lh-1 fw-bold text-white text-center">{{ angel. zipCode }}
										-
										{{ angel.city }}</p>
									<ul class="d-flex list-unstyled text-center mt-auto">
										<li class="me-auto"></li>
										<li class="me-auto">
											{% for service in angel.services %}
												<img src="{{ asset('assets/images/service_icons/' ~ service.image) }}" class="mx-2 rounded-circle border border-white" alt="{{ service.name }}" width="50px">
											{% endfor %}
										</li>
									</ul>
									<!--<div class="d-inline-flex justify-content-center">
																		<small class="bg-dark  px-2">Arrivée avant 20h00</small>
																	</div>-->
								</div>
							</div>
						</div>
					{%  endfor %}
