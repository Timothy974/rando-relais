{% extends 'base.html.twig' %}

	{% block title %}Admin stat
	{% endblock %}

	{% block body %}
		<section class="container admin">

			<h1 class="text-center  my-5">Statistiques</h1>
			<div class="d-flex justify-content-evenly">
				<div>
					<h2>Utilisateurs</h2>
					<p>Nombre d'utilisateurs inscrits :
						<strong>{{ usersQuantity }}</strong>
					</p>
					<ul>dont aujourd'hui :
						<li>Marcheurs :
							<strong>{{ walker }}</strong>
						</li>
						<li>
							Anges :
							<strong>{{ angel }}</strong>
						</li>
						<li>
							Compte{{ desactived == 0 ? '' :  's' }}
							désactivé{{ desactived == 0 ? '' :  's' }}
							:
							<strong>{{ desactived }}</strong>
						</li>
					</ul>
				</div>
				<div>
					<h2>Popularité des services</h2>
					{% for key, value in serviceList %}
						{% for service in services %}
							{% if service.name == key %}
								<ul>
									<li><img src="{{ asset('assets/uploads/'~ service.image) }}" width="30" alt="">
										-
										{{ key}}
										:
										<strong>{{ value }}</strong>
									</li>
								</ul>
							{% endif %}
						{% endfor %}
					{% endfor %}
				</div>
				<div>
					<h2>Evaluations</h2>
					<p>Evaluations enregistrées
						<strong>
							{{ reviewQuantity }}</strong>
					</p>
					<p>Evaluations sur les 30 derniers jours :
						<strong>{{ reviewQuantityMonth}}</strong>
					</p>
				</div>
			</div>
		</section>
	{% endblock %}
