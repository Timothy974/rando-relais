{% extends 'base.html.twig' %}

			{% block title %}Service index
			{% endblock %}

			{% block body %}
				<div class="container admin mt-5">
					<h1 class="text-center mb-5">Liste des services</h1>
					<div class="d-grid w-75 mx-auto d-md-flex justify-content-md-end">
						<a role="button" class="btn btn-success " href="{{ path('admin_service_new') }}">Ajouter un service</a>
					</div>
					<table class="table table-striped text-center w-75 mx-auto">
						<thead>
							<tr>
								<th scope="col">Id</th>
								<th scope="col">Name</th>
								<th scope="col">Image</th>
								
								<th scope="col">actions</th>
							</tr>
						</thead>
						<tbody>
							{% for service in services %}
							
								<tr>
									<th scope="row">{{ service.id }}</th>
								
					
							<td>{{ service.name }}</td>

							<td class=>{{ service.image}}</td>
							

							<td>
								<a role="button" class="btn btn-success" href="{{ path('admin_service_show', {'id': service.id}) }}">show</a>
								<a role="button" class="btn btn-success"  href="{{ path('admin_service_edit', {'id': service.id}) }}">edit</a>
							</td>

							</tr>
						
				
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>

				{% endfor %}

			</tbody>
		</table>


	</div>
{% endblock %}
