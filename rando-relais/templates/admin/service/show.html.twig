{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1 class='text-center'>Service : {{ service.name }}</h1>
<div class="container admin pt-5">

    <table class="table table-striped text-center mw-50">
    <thead>
    <tr>
      <th scope="col">Propriété</th>
      <th scope="col">Valeur</th>
    </tr>
    </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
            <th>Icone</th>
            <td>
                <div ><img class="header-icons"  src="{{ asset('assets/images/service_icons/' ~ service.image ) }}"  alt=""/></div>
            </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ service.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center align-items-center mb-5 flex-wrap">
    <a role="button" class="btn btn-success text-center mx-5" href="{{ path('admin_service_index') }}">Liste des services</a>
    {{ include('admin/service/_delete_form.html.twig') }}
    <a role="button" class="btn btn-success text-center mx-5" href="{{ path('admin_service_edit', {'id': service.id}) }}">Modifier</a>
</div>


   
{% endblock %}
