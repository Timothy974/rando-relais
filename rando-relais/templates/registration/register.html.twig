{% extends 'base.html.twig' %}
{% block title %}
	Inscription |
	{{ parent() }}
{% endblock %}
{% block body %}
	<div
		class="mb-3 mt-3 col-lg-6 mx-auto">
		{# Subscribe title #}
		<h2 class="text-center mt-3">Inscription</h2>
		{# Registration form #}
		{{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {# TODO START : switch to angel to finish #}
		<div class="mb-3 col-lg-6 mx-auto">
			<div class="form-check form-switch d-flex justify-content-center">
				{{ form_row(registrationForm.status) }}
			</div>
		</div>
        {# TODO END #}
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.lastname) }}
		</div>
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.firstname) }}
		</div>
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.email) }}
		</div>
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
		</div>
		{# Angel Data #}
		{# After a click on the switch the status switch form 1 => ("Marcheur" to 2 => "Angel") and we display the angel data. #}
		{# TODO START : delete the comment around the <div class="d-none" id="angel_subscription_form"> #}
		{# <div class="d-none" id="angel_subscription_form"> #}
			<div class="mb-3 col-lg-6 mx-auto"> {{ form_row(registrationForm.phonenumber) }}
		</div>
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.zipcode) }}
		</div>
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.city) }}
		</div>
		{# Services icons #}
		<div class="row justify-content-center">
			{% for service in services %}
				<div class="col-lg-2 col-md-4 text-center opacity-50" id="{{ service.slug }}">
					<input class="form-check-input align-middle d-none" type="checkbox" name="service-checkbox" id="{{ 'service-checkbox-' ~ service.slug }}">
					<label for="tent"><img src="{{ asset('assets/images/service_icons/' ~ service.image) }}" alt="service-icon" class="rounded-circle w-25 "></label>
					<p>{{ service.name}}
						<img src="{{ asset('assets/images/service_icons/validate-20x20.png') }}" id="{{ 'validate-' ~ service.slug }}" class="d-none">
					</p>
				</div>
			{% endfor %}
		</div>
		{# </div> #}
		{# TODO END #}
		<div class="mb-3 col-lg-6 mx-auto">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		{# Submit buttom #}
		<div class="col-lg-6 mx-auto">
			<button type="submit" class="btn btn-success w-100 mb-3">Cr√©er un compte</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
