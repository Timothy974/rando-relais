{% extends 'base.html.twig' %}

{% set currentRoute = app.request.get('_route') %}

{% block header %}

	{% if currentRoute == 'main' %}
		{% include "layout/header-home.html.twig" %}
	{% else %}
		{% include "layout/header-shared.html.twig" %}
	{% endif %}

{% endblock %}

{% block body %}
   <div class="container">
		{# Review header #}
		<header class="text-center mb-3">
			<h2 class="text-center mb-5">Laissez une évaluation à {{reviewedUser.firstName}}</h2>
			{# <img src="{{ asset('assets/images/profile_picture/' ~ reviewedUser.picture )}}" alt="{{ reviewedUser.firstName }}" class="rounded-circle img-fluid" style="width: 15%"> #}
			<img src="{{ asset('assets/images/profile_picture/' ~ random(['aimerick.png','alex.jpg','daniel.png','timothy.jpg'])) }}" alt="Bootstrap" width="80" height="80" class=" rounded-circle border border-white">
		</header>
		{# Review form #}
      <section class="mt-5 col-lg-6 text-center mx-auto">
			{{ form(reviewForm) }}
		</section>
   	</div>
{% endblock %}
